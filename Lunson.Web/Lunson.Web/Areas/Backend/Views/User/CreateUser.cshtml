@{
    ViewBag.Title = "添加用户";
    var roles = ViewBag.roles as List<DropdownItem>;
}

<div class="default-form">
    @using(Html.BeginForm())
    { 
    <h1>基本信息</h1>
    <div class="content">
        @Form.Item("用户名", "text", "UserName", "*")
        @Form.Item("显示名", "text", "DisplayName", "*")
        @Form.Item("密码", "password", "Password", "*")
        @Form.Item("确认密码", "password", "ConfirmPassword", "*")
    </div>
    <h1>权限信息</h1>
    <div class="content">        
        @Form.CheckBox("角色", roles, "Role")
    </div>
    }
</div>

<script type="text/javascript">
    $(function () {
        $(".msg").each(function () {
            $(this).data("msg", $(this).text());
        });

        $(".default-form form").submit(function () {

            $(".msg").each(function () {
                $(this).text($(this).data("msg"));
            });


            $.ajax({
                url: '@Url.Action("CreateUser")',
                data: pharos.json.formtojson($(this)),
                dataType: 'json',
                type: 'post',
                async:false,
                success: function (data,status) {
                    if (data.validate) {
                        pharos.easyui.alert('提示', '保存成功');
                        pharos.easyui.dialog.topClose("createUser");
                        pharos.easyui.dialog.curJquery("createUser")("#user").datagrid("reload");
                    }
                    else {
                        if (data.target == "") {
                            pharos.easyui.alert('系统异常', data.msg);
                        }
                        else {
                            $("input[name=" + data.target + "]").parent().find(".msg").text(data.msg);
                        }
                    }
                },
                error:function(e){
                    pharos.easyui.alert(e.status, e.statusText);
                }
            });


            return false;
        });
    })
</script>